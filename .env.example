# Production Environment Configuration
NODE_ENV=production
PORT=5000

# MongoDB Production URI (Update with your production database)
MONGO_URI=mongodb+srv://your_production_user:your_production_password@your_production_cluster.mongodb.net/pg_bike_rental_prod

# Strong JWT Secret (Generate a secure one for production)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_for_production_minimum_32_characters_long

# Production Email Configuration
EMAIL_USER=production@yourdomain.com
EMAIL_PASS=your_production_email_app_password

# SMTP Configuration for Invoices
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply.pgbike@gmail.com
SMTP_PASS=bytx-clds-blxi-miuh

# Invoice Configuration
DEFAULT_TAX_RATE=18
DEFAULT_PAYMENT_TERMS=30
DEFAULT_PAGE=1
DEFAULT_PAGE_LIMIT=10
DEFAULT_CURRENCY=INR
DEFAULT_LOCALE=en-IN

# Security & Performance
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
SESSION_TIMEOUT=3600000

# Rate Limiting
