PAYMENT_GATEWAY_SECRET=your_production_payment_secret
SMS_API_KEY=your_production_sms_key
NOTIFICATION_SERVICE_KEY=your_production_notification_key

# CORS Settings
CORS_ORIGIN=https://yourdomain.com
TRUST_PROXY=true
